{
  "dependencies": {
    "npm-run-all": "^4.1.5"
  },
  "scripts": {
    "sync": "cd client && yarn codegen && cd ..",
    "install:server": "cd server && yarn install --force",
    "install:client": "cd client && yarn install --force",
    "i": "yarn install --force && npm-run-all -l -p install:*",
    "dev": "yarn i && yarn migrate && npm-run-all -l -p dev:*",
    "migrate": "cd server && yarn migrate && cd ..",
    "dev:prisma": "cd server && npx prisma studio",
    "dev:server": "cd server && yarn dev",
    "dev:client": "cd client && yarn dev"
  }
}